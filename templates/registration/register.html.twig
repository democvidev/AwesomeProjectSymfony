{% extends 'clean.html.twig' %}

{% block title %}S'inscrire sur le site web{% endblock %}
{% block headerTitle %}My awesome blog{% endblock %}
{% block subHeaderTitle %}I invite you to register to read all my posts and comment on them !{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <section class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <h1>Sign up</h1>
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-lg btn-primary">Register</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
